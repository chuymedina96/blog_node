<% include partials/header %>
<div class="ui main text container">
    <div class="ui huge header">RESTful Blog app</div>
    <div class="ui top attached segment">
        <div class="ui divided items animated fadeInUp">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img class="img-responsive" src="<%= blog.image %>"></h2><br>
                    </div>    
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><h2><%= blog.title %></h2></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0,100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic blue button" href="/blogs/<%= blog._id %>">
                                Read more!<i class="right large chevron icon"></i>
                            </a>     
                        </div>
                    </div>
                </div>
            <% }); %>   
        </div>
    </div>
</div>
