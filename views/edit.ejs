<% include partials/header %>
<div class="ui main text container">
    <div class="row">
        <h1 class="text-center">Edit <%= blog.title %> </h1>
        <div class="form-style">
            <form class="animated bounce ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="field">
                    <label>Title</label>
                    <input class="form-control" type="text" name ="blog[title]" value="<%= blog.title %>"</input>   
                </div>
                <div class="field">
                    <label>Image</label>
                    <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>"></input>
                </div>
                <div class="field">
                    <label>Description</label>
                    <textarea name="blog[body]"><%= blog.body %></textarea>
                </div>
                <button class="ui violet inverted big button">Submit</button>
                <a href="/">Back to blogs</a>
            </form>  
        </div>
    </div>
</div>
<% include partials/footer %>